# Filename: my.kv

WindowManager:
    MainWindow:

<MainWindow>:
    name: "main"

    FloatLayout:
        Label:
            id: greetingLabel
            text: "" if app.greetingLabel is None else app.greetingLabel
            font_size: 30
            bold: "true"
            pos: (- root.width/2 + 210), (root.height / 2) - 85
            font_family: "Liberation Sans"
        Label:
            id: dateTimeLabel
            text: "" if app.dateTimeLabel is None else app.dateTimeLabel
            font_size: 25
            pos: (root.width/2) - 240, (root.height / 2) - 80
            font_family: "Liberation Sans"
        Label:
            id: time
            text: "" if app.time is None else app.time
            font_size: 35
            pos: (root.width/2) - 215, (root.height / 2) - 130
        Label:
            id: todo
            text: "" if app.todoList is None else app.todoList
            font_size: 22
            pos: (- root.width/2) + 210,-350
        AsyncImage:
            id: weather_icon
            source: app.weather_icon
            pos: (- root.width/2 + 120), (root.height / 2) - 150
        Label:
            id: temp
            text: "" if app.temp is None else app.temp
            font_size: 20
            pos: (- root.width/2 + 220), (root.height / 2) - 150 
        Label:
            id: description
            text: "" if app.description is None else app.description
            font_size: 20
            pos: (- root.width/2 + 190), (root.height / 2) - 192
            font_family: "Liberation Sans"
        Label:
            id: headline
            text: "Headlines"
            font_size: 25
            pos: -root.width/2 + 125, -root.height/2 + 335
        BoxLayout:
            orientation: "horizontal"
            pos: 30,-575
            AsyncImage:
                id: news_icon
                source: app.news_icon
                size: 125, 125
                size_hint_x: None
            Label:
                id: news_info
                text: app.news_headlines
                font_size: 16
                text_size: root.width - 550, None
                size: self.texture_size
                size_hint_x: None
        Label:
            id: events
            text: app.upcomingEvents
            font_size: 15
            pos: 250,-575
        Label:
            id: covid
            text: "" if app.covidData is None else app.covidData
            font_size: 20
            pos: (root.width/2) - 215, (root.height / 2) - 210
        Label:
            id: google
            text: "" if app.google_cmd is None else app.google_cmd
            font_size: 38
            pos: 0,0
                
    
