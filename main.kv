# Filename: my.kv

WindowManager:
    MainWindow:

<MainWindow>:
    name: "main"

    FloatLayout:
        Label:
            id: errorLabel
            text: "" if app.weather_error is None else app.weather_error
            font_size: 30
            bold: "true"
            color: 1,0,0,1
            pos: 0, 0
            font_family: "Liberation Sans"
        Label:
            id: greetingLabel
            text: "" if app.greetingLabel is None else app.greetingLabel
            font_size: 30
            bold: "true"
            pos: (- root.width/2 + 210), (root.height / 2) - 85
            font_family: "Liberation Sans"
        Label:
            id: dateTimeLabel
            text: "" if app.dateTimeLabel is None else app.dateTimeLabel
            font_size: 25
            pos: (root.width/2) - 240, (root.height / 2) - 80
            font_family: "Liberation Sans"
        Label:
            id: time
            text: "" if app.time is None else app.time
            font_size: 35
            pos: (root.width/2) - 215, (root.height / 2) - 130
        Label:
            id: todo
            text: "" if app.todoList is None else app.todoList
            font_size: 22
            pos: (- root.width/2) + 220,-300
        AsyncImage:
            id: weather_icon1
            source: app.weather_icon1
            pos: (- root.width/2 + 120), (root.height / 2) - 180
        AsyncImage:
            id: weather_icon2
            source: app.weather_icon2
            pos: (- root.width/2 + 200), (root.height / 2) - 180
        AsyncImage:
            id: weather_icon3
            source: app.weather_icon3
            pos: (- root.width/2 + 280), (root.height / 2) - 180
        Label:
            id: weather_time1
            text: "" if app.weather_time1 is None else app.weather_time1
            font_size: 20
            pos: (- root.width/2 + 110), (root.height / 2) - 130
        Label:
            id: weather_time2
            text: "" if app.weather_time2 is None else app.weather_time2
            font_size: 20
            pos: (- root.width/2 + 190), (root.height / 2) - 130
        Label:
            id: weather_time3
            text: "" if app.weather_time3 is None else app.weather_time3
            font_size: 20
            pos: (- root.width/2 + 270), (root.height / 2) - 130 
        Label:
            id: description1
            text: "" if app.description1 is None else app.description1
            font_size: 20
            pos: (- root.width/2 + 120), (root.height / 2) - 235
            font_family: "Liberation Sans"
        Label:
            id: description2
            text: "" if app.description2 is None else app.description2
            font_size: 20
            pos: (- root.width/2 + 200), (root.height / 2) - 235
            font_family: "Liberation Sans"
        Label:
            id: description3
            text: "" if app.description3 is None else app.description3
            font_size: 20
            pos: (- root.width/2 + 280), (root.height / 2) - 235
            font_family: "Liberation Sans"
        Label:
            id: headline
            text: "Headlines"
            font_size: 25
            pos: -root.width/2 + 125, -root.height/2 + 380
        BoxLayout:
            orientation: "horizontal"
            pos: 30,-525
            AsyncImage:
                id: news_icon
                source: app.news_icon
                size: 125, 125
                size_hint_x: None
            Label:
                id: news_info
                text: app.news_headlines
                font_size: 16
                text_size: root.width - 550, None
                size: self.texture_size
                size_hint_x: None
        Label:
            id: events
            text: app.upcomingEvents
            font_size: 15
            pos: 250,-525
        Label:
            id: covid
            text: "" if app.covidData is None else app.covidData
            font_size: 20
            pos: (root.width/2) - 215, (root.height / 2) - 210
        Label:
            id: google
            text: "" if app.google_cmd is None else app.google_cmd
            font_size: 38
            pos: 0,0
                
    
